<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/cardview_shadow_start_color"    android:orientation="vertical"    tools:context="com.materialsdev.activity.fragments.ProfileFragment">    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@color/lightGray"            android:orientation="vertical">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="bottom"                android:background="@color/colorPrimary"                android:orientation="vertical"                >                <de.hdodenhof.circleimageview.CircleImageView                    android:id="@+id/circleImageView"                    android:layout_width="90dp"                    android:layout_height="90dp"                    android:layout_gravity="center_horizontal"                    android:layout_marginTop="10dp"                    android:cropToPadding="true"                    android:src="@mipmap/boy_profile" />                <TextView                    android:id="@+id/user_nameTextView"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:text="Aditya Upadhyay"                    android:textColor="@android:color/white"                    android:textStyle="bold" />                <TextView                    android:id="@+id/user_phone_number"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="10dp"                    android:gravity="center"                    android:text="9407174355"                    android:textColor="@android:color/white" />                <TextView                    android:id="@+id/user_email"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:drawableRight="@drawable/edit_profile"                    android:gravity="center"                    android:padding="5dp"                    android:text="aditya@sdevapp.com"                    android:textColor="@android:color/white" />            </LinearLayout>            <!--Course Card-->            <android.support.v7.widget.CardView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_margin="10dp"                app:cardCornerRadius="2dp"                app:cardElevation="5dp">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical">                    <!--Course Sections-->                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentLeft="true"                            android:padding="10dp"                            android:text="My Cources"                            android:textColor="@android:color/black" />                        <TextView                            android:id="@+id/tv_course_count"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:padding="10dp"                            android:text="20"                            android:textColor="@android:color/darker_gray" />                    </RelativeLayout>                    <View                        android:layout_width="match_parent"                        android:layout_height="1dp"                        android:layout_marginLeft="10dp"                        android:layout_marginRight="10dp"                        android:background="@android:color/darker_gray" />                    <TextView                        android:id="@+id/tv_view_all_cources"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="right"                        android:gravity="right"                        android:padding="10dp"                        android:text="Details"                        android:textColor="@android:color/holo_blue_bright" />                </LinearLayout>            </android.support.v7.widget.CardView>            <!--Tests Card-->            <android.support.v7.widget.CardView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_margin="10dp"                app:cardCornerRadius="2dp"                app:cardElevation="5dp">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical">                    <!--Tests Attended Sections-->                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentLeft="true"                            android:padding="10dp"                            android:text="Tests Attended"                            android:textColor="@android:color/black" />                        <LinearLayout                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:orientation="horizontal"                            >                            <TextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:paddingBottom="10dp"                                android:paddingRight="3dp"                                android:paddingTop="10dp"                                android:text="success rate"                                android:textColor="@android:color/darker_gray" />                            <TextView                                android:id="@+id/tv_tests_average"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:paddingBottom="10dp"                                android:paddingLeft="3dp"                                android:paddingRight="10dp"                                android:paddingTop="10dp"                                android:text="70%"                                android:textColor="@android:color/darker_gray" />                        </LinearLayout>                    </RelativeLayout>                    <View                        android:layout_width="match_parent"                        android:layout_height="1dp"                        android:layout_marginLeft="10dp"                        android:layout_marginRight="10dp"                        android:background="@android:color/darker_gray" />                    <TextView                        android:id="@+id/tv_view_all_tests"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="right"                        android:gravity="right"                        android:padding="10dp"                        android:text="View Reports"                        android:textColor="@android:color/holo_blue_bright" />                </LinearLayout>            </android.support.v7.widget.CardView>            <!--Subscription Card-->            <android.support.v7.widget.CardView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_margin="10dp"                app:cardCornerRadius="2dp"                app:cardElevation="5dp">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical">                    <!--Course Sections-->                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentLeft="true"                            android:padding="10dp"                            android:text="@string/subscription_s"                            android:textColor="@android:color/black" />                        <TextView                            android:id="@+id/tv_subscriptions_count"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:padding="10dp"                            android:text="50"                            android:textColor="@android:color/darker_gray" />                    </RelativeLayout>                    <View                        android:layout_width="match_parent"                        android:layout_height="1dp"                        android:layout_marginLeft="10dp"                        android:layout_marginRight="10dp"                        android:background="@android:color/darker_gray" />                    <TextView                        android:id="@+id/tv_view_all_subscriptions"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="right"                        android:gravity="right"                        android:padding="10dp"                        android:text="All Subscriptions"                        android:textColor="@android:color/holo_blue_bright" />                </LinearLayout>            </android.support.v7.widget.CardView>            <!--Education Details Card-->            <android.support.v7.widget.CardView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_margin="10dp"                app:cardCornerRadius="2dp"                app:cardElevation="5dp">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical">                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentLeft="true"                        android:padding="10dp"                        android:text="@string/education"                        android:textColor="@android:color/black" />                    <View                        android:layout_width="match_parent"                        android:layout_height="1dp"                        android:layout_marginLeft="10dp"                        android:layout_marginRight="10dp"                        android:background="@android:color/darker_gray" />                    <!--Schools-->                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="left"                        android:gravity="center"                        android:padding="10dp"                        android:text="Scholars' Den" />                    <!--Coachings-->                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:padding="10dp">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentLeft="true"                            android:gravity="left"                            android:text="Coachings" />                        <TextView                            android:id="@+id/textView"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentEnd="true"                            android:layout_alignParentRight="true"                            android:layout_alignParentTop="true"                            android:gravity="right"                            android:text="4"                            android:textColor="@android:color/black" />                    </RelativeLayout>                    <TextView                        android:id="@+id/tv_view_all_sub"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="right"                        android:gravity="right"                        android:padding="10dp"                        android:text="Details"                        android:textColor="@android:color/holo_blue_bright" />                </LinearLayout>            </android.support.v7.widget.CardView>            <!--Achievements Card-->            <android.support.v7.widget.CardView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_margin="10dp"                app:cardCornerRadius="2dp"                app:cardElevation="5dp">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical">                    <!--Achievements Sections-->                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentLeft="true"                            android:padding="10dp"                            android:text="My Achievements"                            android:textColor="@android:color/black" />                        <TextView                            android:id="@+id/tv_Achievements_count"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:padding="10dp"                            android:text="9"                            android:textColor="@android:color/darker_gray" />                    </RelativeLayout>                    <View                        android:layout_width="match_parent"                        android:layout_height="1dp"                        android:layout_marginLeft="10dp"                        android:layout_marginRight="10dp"                        android:background="@android:color/darker_gray" />                    <TextView                        android:id="@+id/tv_view_all_achievements"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="right"                        android:gravity="right"                        android:padding="10dp"                        android:text="Details"                        android:textColor="@android:color/holo_blue_bright" />                </LinearLayout>            </android.support.v7.widget.CardView>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="@android:color/white"                android:orientation="horizontal"                android:padding="10dp">                <ImageView                    android:layout_width="20dp"                    android:layout_height="20dp"                    android:layout_margin="10dp"                    android:src="@drawable/about_us" />                <TextView                    android:id="@+id/tv_about_sdev"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:text="About SDev"                    android:textColor="@android:color/darker_gray" />            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="1dp"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:background="@android:color/darker_gray" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="@android:color/white"                android:orientation="horizontal"                android:padding="10dp">                <ImageView                    android:layout_width="20dp"                    android:layout_height="20dp"                    android:layout_margin="10dp"                    android:src="@drawable/help" />                <TextView                    android:id="@+id/tv_help"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:text="Help"                    android:textColor="@android:color/darker_gray" />            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="1dp"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:background="@android:color/darker_gray" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="@android:color/white"                android:orientation="horizontal"                android:padding="10dp">                <ImageView                    android:layout_width="20dp"                    android:layout_height="20dp"                    android:layout_margin="10dp"                    android:src="@drawable/share" />                <TextView                    android:id="@+id/tv_share_app"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:text="Share App"                    android:textColor="@android:color/darker_gray" />            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="1dp"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:background="@android:color/darker_gray" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="@android:color/white"                android:orientation="horizontal"                android:padding="10dp">                <ImageView                    android:layout_width="20dp"                    android:layout_height="20dp"                    android:layout_margin="10dp"                    android:src="@drawable/playstore" />                <TextView                    android:id="@+id/tv_rate_sdev"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:text="RateApp"                    android:textColor="@android:color/darker_gray" />            </LinearLayout>        </LinearLayout>    </ScrollView></LinearLayout>